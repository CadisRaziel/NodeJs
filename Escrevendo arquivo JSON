const fs = require('fs');

const produto = {
    nome: 'Celular',
    preco: 1249.99,
    desconto: 0.15
}
//repare que o /arquivoGerado.json nÃ£o existia, e ao executar o codigo ele foi implementado em nossa pasta node
fs.writeFile(__dirname + '/arquivoGerado.json', JSON.stringify(produto), err => {
    console.log(err || 'Arquivo salvo !')
})
